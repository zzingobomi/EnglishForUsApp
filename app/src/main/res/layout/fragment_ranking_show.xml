<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ranking.RankingShowFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="노출수 순위" />
    <TextView
        android:id="@+id/ranking_impression_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ranking_impression_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ranking_impression_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/light_grey"
        android:layout_width="match_parent"
        android:layout_height="2px"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="좋아요 순위" />
    <TextView
        android:id="@+id/ranking_like_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ranking_like_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ranking_like_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/light_grey"
        android:layout_width="match_parent"
        android:layout_height="2px"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="문장개수 순위" />
    <TextView
        android:id="@+id/ranking_manyitem_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ranking_manyitem_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ranking_manyitem_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/light_grey"
        android:layout_width="match_parent"
        android:layout_height="2px"/>

</LinearLayout>