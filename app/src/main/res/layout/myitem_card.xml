<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myitem_title_ko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="한국어문장"/>

        <TextView
            android:id="@+id/myitem_title_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="영어문장"/>

        <TextView
            android:id="@+id/myitem_addinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="부연 설명"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="2px"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/myitemmodify_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:drawableLeft="@drawable/ic_study_comment"
                    android:layout_gravity="center"
                    android:text="수정"/>
                <View
                    android:background="@color/black"
                    android:layout_width="2px"
                    android:layout_height="40dp"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/myitemdelete_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:drawableLeft="@drawable/ic_study_like"
                    android:layout_gravity="center"
                    android:text="삭제"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>